<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender writes logs to the console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %logger{36} - %msg%n"/>
        </Console>

        <!-- Optional: File appender to save logs to a file -->
        <File name="FileLogger" fileName="logs/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Root logger controls default logging level -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <!-- Uncomment the next line to enable file logging -->
            <!-- <AppenderRef ref="FileLogger"/> -->
        </Root>

        <!-- Example: Logger for Selenium specific classes with debug level -->
        <Logger name="org.openqa.selenium" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>